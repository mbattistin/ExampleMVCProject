@model ExampleMVCProject.Models.Expense

@{
	ViewData["Title"] = "Update Expense";
}

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
		}

	<form method="post" asp-action="Update">
		<div class="border p-3">
			@*<div asp-validation-summary="ModelOnly" class="text-danger">*@
			<h2 class="pl-3">New Expense </h2>
			<div class="mb-3 row">
				<label class="col-sm-2 col-form-label">Name:</label>
				<div class="col-sm-10">
					<input type="text" asp-for="Name" maxlength="150" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
			</div>
			<div class="mb-3 row">
				<label class="col-sm-2 col-form-label">Amount:</label>
				<div class="col-sm-10">
					<input type="number" asp-for="Amount" class="form-control" />
					<span asp-validation-for="Amount" class="text-danger"></span>
				</div>
			</div>
			<div class="mb-3 row">
				<label class="col-sm-2 col-form-label">Paid Date:</label>
				<div class="col-sm-3">
					<input type="date" asp-for="PaidDate" class="form-control" />
				</div>
			</div>
			<div class="d-grid gap-2 d-md-flex justify-content-md-end">
				<button class="btn btn-success" value="Update"><i class="fa-solid fa-floppy-disk" style="margin-right: 5px;"></i>Submit</button>
				<button class="btn btn-dark" asp-controller="Expense" asp-action="Index" formnovalidate><i class="fa-solid fa-xmark" style="margin-right: 5px;"></i>Cancel</button>
			</div>
		</div>
	</form>

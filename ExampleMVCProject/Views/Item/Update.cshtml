@model ExampleMVCProject.Models.Item

@{
	ViewData["Title"] = "Update Item";
}

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
	}
	<form method="post" asp-action="Update">
		<div class="border p-3">
			@*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
			<h2 class="pl-3">Update Item</h2>
			<div class="mb-3 row">
				<label class="col-sm-2 col-form-label">Name:</label>
				<div class="col-sm-10">
					<input type="text" asp-for="Name" maxlength="150" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>

				</div>
			</div>
			<div class="mb-3 row">
				<label class="col-sm-2 col-form-label">Borrower:</label>
				<div class="col-sm-10">
					<input type="text" asp-for="Borrower" maxlength="300" class="form-control" />
					<span asp-validation-for="Borrower" class="text-danger"></span>

				</div>
			</div>
			<div class="mb-3 row">
				<label class="col-sm-2 col-form-label">Lender:</label>
				<div class="col-sm-10">
					<input type="text" asp-for="Lender" maxlength="300" class="form-control" />
					<span asp-validation-for="Lender" class="text-danger"></span>
				</div>
			</div>
			<div class="mb-3 row">
				<label class="col-sm-2 col-form-label">Returned Date:</label>
				<div class="col-sm-10">
					<input type="date" asp-for="ReturnedDate" class="form-control" />
				</div>
			</div>
			<div class="d-grid gap-2 d-md-flex justify-content-md-end">
				<button class="btn btn-success" value="Update"><i class="fa-solid fa-floppy-disk" style="margin-right: 5px;"></i>Submit</button>
				<button class="btn btn-dark" asp-controller="Item" asp-action="Index" formnovalidate><i class="fa-solid fa-xmark" style="margin-right: 5px;"></i>Cancel</button>
			</div>
		</div>
	</form>

